<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Posts</h1>
   <% if current_user %>
    <%= link_to 'New Post', new_post_path %>
    <table class="table">
      <thead>
        <tr>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <%
=begin%>
 <td><%= post.body %></td> 
<%
=end%>
            <td><img width="100px" height="50px" src="<%= (url_for(post.image)) %>"></td>
            <td><%= link_to 'Show', post %></td>
            <% if current_user && current_user.admin %>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%end%>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>